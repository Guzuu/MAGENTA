<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Magenta</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark navbar-toggleable-sm box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/Assets/Magenta.png" height="30" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li class="nav-item">
                                <span class="nav-link text-light">Welcome, <i class="text-magenta">@User.Identity.Name</i></span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li class="nav-item"><a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="Login"><i class="bi bi-box-arrow-in-right"></i>Login</a></li>
                            <li class="nav-item"><a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
                        </ul>
                    }
                    <ul class="nav navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item border-right">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link text-light dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Admin
                                </a>
                                <div class="dropdown-menu bg-darkgrey" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item text-light" asp-area="" asp-controller="" asp-action="Index">Users</a>
                                    <a class="dropdown-item text-light" asp-area="" asp-controller="" asp-action="Index">Roles</a>
                                </div>
                            </li>
                        }
                        @if (User.IsInRole("Admin") || User.IsInRole("OfficeWorker"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link text-light dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Office
                                </a>
                                <div class="dropdown-menu bg-darkgrey" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item text-light" asp-area="" asp-controller="Projects" asp-action="Index">Projects</a>
                                    <a class="dropdown-item text-light" asp-area="" asp-controller="Products" asp-action="Index">Products</a>
                                    <a class="dropdown-item text-light" asp-area="" asp-controller="WorkTypes" asp-action="Index">WorkTypes</a>
                                    <a class="dropdown-item text-light" asp-area="" asp-controller="Machines" asp-action="Index">Machines</a>
                                </div>
                            </li>
                        }
                        @if (User.IsInRole("Admin") || User.IsInRole("GraphicDesigner"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Designs" asp-action="Index">
                                    Graphic Designs <span class="sr-only">(current)</span>
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Admin") || User.IsInRole("BookBinder") || User.IsInRole("Printer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Works" asp-action="Index">
                                    Works <span class="sr-only">(current)</span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3 m-5">
            @RenderBody()
        </main>
    </div>
    <footer class="footer text-light">
        <div class="container">
            &copy; 2021 - Magenta - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
