@model IEnumerable<Magenta.Models.Designs>

@{
    ViewData["Title"] = "Designs";
}

<label class="h1 text-magenta">Designs</label>
<a class="btn btn-magenta ml-3 mb-2" asp-action="Create">Create New</a>

<table class="table text-lgrey">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateDesigned)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Accepted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AttatchmentsPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DesignedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateDesigned)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Accepted)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AttatchmentsPath)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DesignedBy.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Project.Id)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
